Write code to reverse a C-style String. (Including the null terminator)

string reverseString( string s)
{
  int len = s.length();
  string res;
  if( len < 1)
    return -1;
  
  for(int i=len-1; i >= 0; i--)
    {
      if(s[i]==" ")
        continue;
      else
        res[len-i]=s[i];
    }
    res.push_back(" ");
    return res;
}
