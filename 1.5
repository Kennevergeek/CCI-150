void removeDuplicates( string s)
{
  if(s.length()<2)
    return;
  bool c[256];
  memset(c,0,sizeof(c));
  int p = 0;
  for (int i= 0;i<s.length();i++)
  {
    if(!c[s[i]])
      {
        s[p++] = s[i];
        c[s[i]] = true;
      }
  }
  s[p] = '\0';
}
          
          
